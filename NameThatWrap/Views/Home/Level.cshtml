@using NameThatWrap.Models;
@using NameThatWrap.data;


@{
    ViewBag.Title = "Level";
    Layout = "../Shared/_Layout.cshtml";
}


    <div id="wrap">
        <h1 id="@ViewBag.topchoice">@ViewBag.TopWrap.Colorway</h1>
        <p>or</p>
        <h1 id="@ViewBag.bottomchoice">@ViewBag.BottomWrap.Colorway</h1>
    </div><!--end wrap div-->
    <div id="bg">
        <img id="levelbgimg" src="../../Assets/img/@Model.ImgName" alt="wrapcolorway" />
    </div><!--end bg div-->

    <script type="text/javascript">
        $(document).ready(function () {

            $("#rightchoice").click(function () {
                $("#wrap").replaceWith("<div id=\"reply\"><h1 id=\"correct\">Correct!</h1></div>@*<div id=\"score\">@ViewBag.numCorrect/@ViewBag.numAttempted correct</div>*@")

                setTimeout(function () {
                    $("body").load("@Url.Action("Level", "Home", new { wrapID = ViewBag.NextLevelWrapID })");
                }, 2000);
            });
            $("#wrongchoice").click(function () {
                $("#wrap").replaceWith("<div id=\"reply\"><h1 id=\"incorrect\">Nope, it's @Model.Colorway!</h1></div>")

                setTimeout(function () {
                    $("body").load("@Url.Action("YouLose", "Home")");
                }, 2000);
            });
        });
    </script>